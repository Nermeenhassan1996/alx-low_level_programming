#include "main.h"
#include <stdio.h>

/**
 * print_array - check the code for
 * Description: prints the elements of array
 * separated by comma
 * @a: array of integers
 * @n: number of elements of the array
 * Return: nothing
 */
void print_array(int *a, int n)
{
	int i = 0;

	for (; i < n; i++)
	{
		if (i != 0)
			printf(", ");

		printf("%d", a[i]);
	}

	putchar('\n');
}
